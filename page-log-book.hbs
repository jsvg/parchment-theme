{{!< default}}
<div id="index">

  {{> "header"}}

  <main id="log-book">
    {{#get "posts" as |articles pages|}}
      <div>
        <div class="total"><h4>Log entries: <span>{{pages.total}}</span></h4></div>
      </div>
      {{#foreach articles}}
        <ul>
          <li>
            <a href="{{url}}">
              <article class="list-post {{post_class}}">
                <header class="post-header">
                  <h2 class="post-title">{{title}}</h2>
                  <span class="post-meta"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM DD, YYYY"}}</time></span>
                  <div class="clear"></div>
                </header>
                <section class="post-excerpt">
                  <p>{{excerpt}}&hellip;</p>
                </section>
              </article>
              <br>
            </a>
          </li>
        </ul>
      {{/foreach}} 
    {{/get}}    
  </main>

</div>
